    alt="Magical sparkles"
  />

  <h1 class="glow">Faith, will you be my girlfriend?</h1>

  <div id="buttons">
    <button id="yes-btn">Yes</button>
    <button id="no-btn">No</button>
  </div>

  <script>
    const yesBtn = document.getElementById("yes-btn");
    const noBtn = document.getElementById("no-btn");

    let noCount = 0;

    const noPhrases = [
      "No",
      "Are you sure?",
      "Really sure?",
      "Think again!",
      "Last chance!",
      "Surely not?",
      "This spell can be undone!",
      "Have a heart!",
      "Change of heart?",
      "Final answer?",
      "You're resisting the magic ðŸ˜­"
    ];

    yesBtn.addEventListener("click", () => {
      document.body.innerHTML = `
        <img
          src="https://media.tenor.com/3h6Ykz7g9vQAAAAi/magic-wand-sparkle.gif"
          alt="Magic spell"
        />
        <h1 class="glow">
          âœ¨ The girl from 4th Street, Faith, said Yes ðŸ’– âœ¨
        </h1>
      `;
    });

    noBtn.addEventListener("click", () => {
      noCount++;
      noBtn.textContent =
        noPhrases[Math.min(noCount, noPhrases.length - 1)];

      // Move No button like it's cursed
      const top = Math.random() * 70;
      const left = Math.random() * 70;
      noBtn.style.top = top + "%";
      noBtn.style.left = left + "%";

      // Grow Yes button
      yesBtn.style.fontSize = 16 + noCount * 4 + "px";
    });
  </script>

